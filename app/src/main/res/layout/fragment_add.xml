<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp"
        tools:context=".SignupActivity">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="700dp"
            app:cardCornerRadius="30dp"
            android:background="@drawable/lavender_border"
            app:cardElevation="20dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    android:layout_gravity="center_horizontal"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Add Customer"
                        android:textSize="30sp"
                        android:textAlignment="center"
                        android:textStyle="bold" />


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/number"
                        android:background="@drawable/lavender_border"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/black"
                        android:inputType="phone"
                        android:padding="8dp"
                        android:hint="Phone Number"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:drawableLeft="@drawable/baseline_person_24"
                        android:drawablePadding="8dp" />


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/name"
                        android:background="@drawable/lavender_border"
                        android:textColor="@color/black"
                        android:layout_marginTop="20dp"
                        android:padding="8dp"
                        android:hint="Name"
                        android:drawableLeft="@drawable/baseline_person_24"
                        android:drawablePadding="8dp"
                        android:focusable="true"
                    android:focusableInTouchMode="true"
                    />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/email"
                        android:background="@drawable/lavender_border"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/black"
                        android:inputType="textEmailAddress"
                        android:padding="8dp"
                        android:hint="Email"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:drawableLeft="@drawable/baseline_email_24"
                        android:drawablePadding="8dp"/>


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:id="@+id/address"
                        android:background="@drawable/lavender_border"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/black"
                        android:padding="8dp"
                        android:hint="Address"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:drawableLeft="@drawable/baseline_add_location_alt_24"
                        android:drawablePadding="8dp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/city"
                        android:background="@drawable/lavender_border"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/black"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:padding="8dp"
                        android:hint="City"
                        android:drawableLeft="@drawable/baseline_add_location_alt_24"
                        android:drawablePadding="8dp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/state"
                        android:background="@drawable/lavender_border"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/black"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:padding="8dp"
                        android:hint="State"
                        android:drawableLeft="@drawable/baseline_add_location_alt_24"
                        android:drawablePadding="8dp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/pincode"
                        android:background="@drawable/lavender_border"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/black"
                        android:inputType="number"
                        android:padding="8dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:hint="PinCode"
                        android:drawableLeft="@drawable/baseline_123_24"
                        android:drawablePadding="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        android:layout_marginTop="20dp"
                        android:text="Machine Details"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/model"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/lavender_border"
                        android:drawableLeft="@drawable/baseline_print_24"
                        android:drawablePadding="8dp"

                        android:hint="Machine Model"
                        android:padding="8dp"
                        android:textColor="@color/black" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/modelid"
                        android:background="@drawable/lavender_border"
                        android:layout_marginTop="20dp"
                        android:padding="8dp"
                        android:textColor="@color/black"

                        android:hint="Serial Number"
                        android:drawableLeft="@drawable/baseline_screen_search_desktop_24"
                        android:drawablePadding="8dp" />
                    <EditText
                        android:id="@+id/installationDate"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"

                        android:background="@drawable/lavender_border"
                        android:drawableLeft="@drawable/baseline_calendar_month_24"
                        android:drawablePadding="8dp"
                        android:hint="Installiation Date"
                        android:padding="8dp"
                        android:textColor="@color/black"
                        />

                    <AutoCompleteTextView
                        android:id="@+id/amd"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/lavender_border"
                        android:padding="8dp"
                        android:hint="Period of AMD"
                        android:inputType="number"
                        android:textColor="@color/black"
                        android:drawableLeft="@drawable/baseline_shield_24"
                        android:drawablePadding="8dp"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/price"
                        android:background="@drawable/lavender_border"
                        android:layout_marginTop="20dp"
                        android:padding="8dp"
                        android:hint="No.of.coppies"
                        android:textColor="@color/black"
                        android:inputType="numberDecimal"
                        android:drawableLeft="@drawable/baseline_newspaper_24"
                        android:drawablePadding="8dp"/>

                    <Button
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:text="ADD"
                        android:id="@+id/add"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:layout_marginTop="20dp"
                        android:backgroundTint="@color/lavender"
                        app:cornerRadius ="20dp"/>
                </LinearLayout>



            </ScrollView>
        </androidx.cardview.widget.CardView>
    </LinearLayout>


</FrameLayout>